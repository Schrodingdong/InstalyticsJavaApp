<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".LoggingActivity"
    android:background="@drawable/app_background"
    android:id="@+id/screen">



    <!--    TODO: Top Handle-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_handle_widget"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/core_app_top_handle">
        <TextView
            android:id="@+id/instalytics"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:fontFamily="cursive"
            android:text="Instalytics"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    TODO SCROLLABLE AREA-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollable_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_handle_widget"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_analytics_title_layout_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profile_analytics_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/core_app_section_fill"

                        android:layout_margin="@dimen/padding"
                        android:padding="@dimen/padding"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POST ANALYTICS"
                            android:textColor="@color/Text"
                            android:textSize="20dp"

                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/post_analytics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/core_app_section_fill"
                    android:layout_margin="@dimen/padding"
                    android:padding="@dimen/padding"
                    app:layout_constraintTop_toBottomOf="@id/profile_analytics_title_layout_layout">
                    <TextView
                        android:id="@+id/post_analytics_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POST DATA"
                        android:textColor="@color/Text"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/post_analytics_graph"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_margin="@dimen/padding"
                        android:layout_marginTop="52dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/post_analytics_title" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/post_analytics_text_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/paddingAndCentering"
                        android:layout_marginVertical="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/post_analytics_graph">
                        <LinearLayout
                            android:id="@+id/post_analytics_avg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <TextView
                                android:id="@+id/avg_engagement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average Engagement "
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/avg_reach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average reach "
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/avg_impressions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average impressions"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/reach_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="Reach percentage "
                                android:textColor="@color/Text"
                                android:textSize="14dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/profile_analytics_avg_values"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:id="@+id/avg_engagement_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/avg_reach_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/avg_impressions_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/reach_percentage_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/post_analytics_text_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/paddingAndCentering"
                        android:layout_marginVertical="25dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/post_analytics_text_layout">
                        <LinearLayout
                            android:id="@+id/post_analytics_deviation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <TextView
                                android:id="@+id/deviation_engagement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engagement deviation "
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/deviation_reach"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reach deviation"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/deviation_impressions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impressions deviation"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/post_analytics_deviation_values"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:id="@+id/deviation_engagement_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/deviation_reach_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/deviation_impressions_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textAlignment="viewEnd"

                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/correlation_analytics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_app_section_fill"
                    android:layout_margin="@dimen/padding"
                    tools:layout_editor_absoluteX="5dp"
                    android:padding="@dimen/padding">
                    <TextView
                        android:id="@+id/correlation_analytics_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CORRELATION"
                        android:textColor="@color/Text"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/correlation_analytics_interpretation_text_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/paddingAndCentering"
                        android:layout_marginVertical="25dp"
                        app:layout_constraintTop_toBottomOf="@id/correlation_analytics_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <LinearLayout
                            android:id="@+id/correlation_analytics_interpretation_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <TextView
                                android:id="@+id/corr_reach_saved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reach &amp; saved "
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/corr_engagement_saved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Engagement &amp; saved"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/correlation_analytics_interpretation_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">
                            <TextView
                                android:id="@+id/corr_reach_saved_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/corr_engagement_saved_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx.xx"
                                android:textColor="@color/Text"
                                android:textSize="14dp"/>

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/trendline_post_analytics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/core_app_section_fill"
                    android:layout_margin="@dimen/padding"
                    tools:layout_editor_absoluteX="5dp"
                    android:padding="@dimen/padding">
                    <TextView
                        android:id="@+id/trendline_post_analytics_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRENDLINES"
                        android:textColor="@color/Text"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/trendline_post_analytics_chart"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_margin="@dimen/padding"
                        app:layout_constraintTop_toBottomOf="@id/trendline_post_analytics_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>